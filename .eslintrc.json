{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": "trybe-backend",
  "rules": {
    "sonarjs/no-duplicate-string": ["error", 5],
    "max-lines-per-function": ["warn", 80],
    "no-use-before-define": ["off", { "functions": true, "classes": true, "variables": true }],
    "complexity": ["off", 2],
    "no-param-reassign": ["off", { "props": true }],
    "func-names": ["off", "as-needed"],
    "sonarjs/cognitive-complexity": ["off"],
    "one-var": ["off"],
    "global-require": "off"
  },
  "parserOptions": {
    "es6": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint"
}
